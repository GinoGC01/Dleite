---
import contacts from "../../sources/contact.json";
import ContactLi from "./ContactLi.astro";
---

<section>
  <h2>Contacto</h2>
  <p>Canales de contactos disponibles!</p>
  <ul class="contact-socialmedia-container">
    {
      contacts.map(
        (contact) =>
          contact.online && (
            <ContactLi
              contact={contact}
              width="2.5em"
              height="2.5em"
              color="#095214be"
            />
          )
      )
    }
  </ul>
</section>

<style>
  section > h2 {
    padding: 7px;
    text-align: center;
  }
  section > p {
    width: 100%;
    padding: 10px;
    text-align: center;
  }
  .contact-socialmedia-container {
    width: 100%;
    padding: 10px 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.8em;
  }

  @media (width > 700px){
    section{
      margin-top: 3em;
    }
    
    .contact-socialmedia-container{
      width: 30%;
      margin: auto;
      transform: scale(1.4) translateY(10px);
    }

    h2{
      font-size: 2em;
    }

    
  }
</style>
